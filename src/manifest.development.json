{
    "manifest_version": 3,
    "name": "track-productivity",
    "description": "Track productivity plugin for chrome",
    "version": "0.0.1",
    "permissions": [
        "tabs",
        "background",
        "activeTab"
    ],
    "background": {
        "service_worker": "/js/background.js"

    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "*://*/*"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ],
    "options_page": "options.html"

}